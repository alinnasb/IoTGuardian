<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.unican.iotguardian">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="es.unican.iotguardian.common.MyApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_app_wise"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_app_wise_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppRiesgosPersonales"
        tools:targetApi="33"
        android:usesCleartextTraffic="true">

        <provider
            android:name="es.unican.iotguardian.activities.dispositivos.search.DeviceSuggestionProvider"
            android:authorities="es.unican.iotguardian.activities.dispositivos.search.DeviceSuggestionProvider" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="es.unican.iotguardian.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="es.unican.iotguardian.activities.main.MainView"
            android:windowSoftInputMode="adjustPan"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
    </application>

</manifest>